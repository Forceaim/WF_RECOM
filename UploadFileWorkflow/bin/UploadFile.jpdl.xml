<?xml version="1.0" encoding="UTF-8"?>

<process-definition  name="UploadFile">


	<start-state name="start">
		<transition to="uploadFile"></transition>
	</start-state>


	<task-node name="uploadFile">
		<description>
			Vous pouvez déposer le rapport
		</description>
		<task name="Déposer le rapport">
			<assignment actor-id="okmNestor"></assignment>
		</task>
		<timer duedate="2 business minutes" name="uploadTimer" transition="toMail">
		</timer>
		<transition to="mailToAdmin" name="toMail"></transition>
		<transition to="end" name="to end"></transition>
	</task-node>

	<mail-node name="mailToAdmin" actors="okmAdmin">
		<subject>
			Date limite
		</subject>
		<text>
			La date de dépôt du rapport est atteinte.
		</text>
		<transition to="end"></transition>
	</mail-node>


	<end-state name="end"></end-state>


</process-definition>