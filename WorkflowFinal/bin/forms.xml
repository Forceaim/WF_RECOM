<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow-forms PUBLIC "-//OpenKM//DTD Workflow Forms 2.6//EN" "http://www.openkm.com/dtd/workflow-forms-2.6.dtd">
<workflow-forms>
	<workflow-form task="Déposer le rapport">
		<select label="Assigner à" name="user" type="simple" className="com.openkm.select.values.ListRole"/>
		<button name="envoyer" label="Envoyer" transition="transmission"></button>
	</workflow-form>
	<workflow-form task="Traiter le rapport">
		<button name="conforme" label="Valider" transition="Valider"></button>
		<button name="non conforme" label="Refuser" transition="Refuser"></button>
	</workflow-form>
	<workflow-form task="Valider le rapport">
		<button name="valider" label="Archiver" transition="valider"></button>
		<!-- <button name="refuser" label="Refuser" transition="refuser"></button> -->
	</workflow-form>
	<workflow-form task="Recevoir commentaires">
		<button name="valider" label="Archiver" transition="Archiver"></button>
	</workflow-form>
</workflow-forms>
 